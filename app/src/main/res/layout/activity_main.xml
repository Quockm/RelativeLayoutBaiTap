<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingRight="43dp"
        android:paddingLeft="43dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="#673AB7"/>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv4"
        android:layout_above="@id/tv4"
        android:textColor="#FFFFFF"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingRight="43dp"
        android:paddingLeft="43dp"
        android:text="3"
        android:textSize="30sp"
        android:background="#FFC107">
    </TextView>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv3"
        android:layout_above="@id/tv3"
        android:textColor="#FFFFFF"
        android:text="2"
        android:textSize="30sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingRight="43dp"
        android:paddingLeft="43dp"
        android:background="#4CAF50">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv2"
        android:layout_above="@id/tv2"
        android:textColor="#FFFFFF"
        android:text="1"
        android:textSize="30sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingRight="43dp"
        android:paddingLeft="43dp"
        android:background="#F44336">
    </TextView>
    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv4"
        android:layout_below="@id/tv4"
        android:textColor="#FFFFFF"
        android:text="5"
        android:textSize="30sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingRight="43dp"
        android:paddingLeft="43dp"
        android:background="#AF9190">
    </TextView>
    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv5"
        android:layout_below="@id/tv5"
        android:textColor="#FFFFFF"
        android:text="6"
        android:textSize="30sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingRight="43dp"
        android:paddingLeft="43dp"
        android:background="#EB794444">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv6"
        android:layout_below="@id/tv6"
        android:textColor="#FFFFFF"
        android:text="7"
        android:textSize="30sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingRight="43dp"
        android:paddingLeft="43dp"
        android:background="#00BCD4">
    </TextView>

</RelativeLayout>